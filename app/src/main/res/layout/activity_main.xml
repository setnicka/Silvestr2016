<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.jirka.silvestr2016.MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="13dp"
            android:layout_marginEnd="13dp">

            <TableRow
                android:layout_width="10dp"
                android:layout_height="match_parent" >

                <TextView
                    android:text="Peníze:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView10"
                    android:textStyle="normal|bold"
                    android:textColor="@android:color/black"
                    android:textAlignment="textEnd" />

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:text="0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/statusPenize"
                    android:textSize="18sp"
                    android:textAlignment="textEnd"
                    android:textColor="@android:color/black"
                    android:textStyle="normal|bold"
                    android:textAllCaps="false" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView13"
                    android:text="Kč"
                    android:textAlignment="viewStart"
                    android:textColor="@android:color/black"
                    android:textStyle="normal|bold"
                    android:textSize="18sp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <TextView
                    android:text="Jídlo:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView11"
                    android:textColor="@android:color/black"
                    android:textStyle="normal|bold"
                    android:textAlignment="textEnd" />

                <Space
                    android:layout_width="10dp"
                    android:layout_height="wrap_content" />

                <TextView
                    android:text="0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/statusJidlo"
                    android:textAlignment="textEnd"
                    android:textSize="18sp"
                    android:textColor="@android:color/black"
                    android:textStyle="normal|bold" />

                <TextView
                    android:text="kg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView14"
                    android:textAlignment="textStart"
                    android:textStyle="normal|bold"
                    android:textSize="18sp"
                    android:textColor="@android:color/black" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/plusJidlo"
                    android:textAppearance="@style/TextAppearance.AppCompat.Button"
                    style="@style/Widget.AppCompat.Button.Small"
                    android:elevation="0dp"
                    android:background="@android:drawable/ic_input_add" />

                <TextView
                    android:text="cena: 1kg za 50 Kč"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView12" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:text="Alkohol:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView11"
                    android:textColor="@android:color/black"
                    android:textStyle="normal|bold"
                    android:textAlignment="textEnd" />

                <Space
                    android:layout_width="10dp"
                    android:layout_height="wrap_content" />

                <TextView
                    android:text="0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/statusAlkohol"
                    android:textAlignment="textEnd"
                    android:textSize="18sp"
                    android:textColor="@android:color/black"
                    android:textStyle="normal|bold" />

                <TextView
                    android:text="l"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView14"
                    android:textAlignment="textStart"
                    android:textStyle="normal|bold"
                    android:textSize="18sp"
                    android:textColor="@android:color/black" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/plusAlkohol"
                    android:textAppearance="@style/TextAppearance.AppCompat.Button"
                    style="@style/Widget.AppCompat.Button.Small"
                    android:elevation="0dp"
                    android:background="@android:drawable/ic_input_add" />

                <TextView
                    android:text="cena: 1litr za 50 Kč"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView12" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:text="Plynové lampy:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView11"
                    android:textColor="@android:color/black"
                    android:textStyle="normal|bold"
                    android:textAlignment="textEnd" />

                <Space
                    android:layout_width="10dp"
                    android:layout_height="wrap_content" />

                <TextView
                    android:text="0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/statusLampy"
                    android:textAlignment="textEnd"
                    android:textSize="18sp"
                    android:textColor="@android:color/black"
                    android:textStyle="normal|bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView14"
                    android:textAlignment="textStart"
                    android:textStyle="normal|bold"
                    android:textSize="18sp"
                    android:textColor="@android:color/black"
                    android:text="ks" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/plusLampy"
                    android:textAppearance="@style/TextAppearance.AppCompat.Button"
                    style="@style/Widget.AppCompat.Button.Small"
                    android:elevation="0dp"
                    android:background="@android:drawable/ic_input_add" />

                <TextView
                    android:text="cena: 1 za 800 Kč"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView12" />
            </TableRow>
        </TableLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp" />

        <TextView
            android:text="Učastníci"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView4"
            android:textAlignment="center"
            android:textStyle="normal|bold"
            android:textSize="16sp"
            android:textColor="@android:color/black" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:text="Boží:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView11"
                    android:textColor="@android:color/black"
                    android:textStyle="normal|bold"
                    android:textAlignment="textEnd" />

                <Space
                    android:layout_width="10dp"
                    android:layout_height="wrap_content" />

                <TextView
                    android:text="0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/ucastnikuBozich"
                    android:textAlignment="textEnd"
                    android:textSize="18sp"
                    android:textColor="@android:color/black"
                    android:textStyle="normal|bold" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/plusUcastniciBozi"
                    android:textAppearance="@style/TextAppearance.AppCompat.Button"
                    style="@style/Widget.AppCompat.Button"
                    android:elevation="0dp"
                    android:text="Pozvat jednoho"
                    android:textSize="10sp" />

                <TextView
                    android:text="Božích zájemců:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView12"
                    android:textAlignment="textEnd" />

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:text="0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/ucastnikuBozichDostupno" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:text="Docela:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView11"
                    android:textColor="@android:color/black"
                    android:textStyle="normal|bold"
                    android:textAlignment="textEnd" />

                <Space
                    android:layout_width="10dp"
                    android:layout_height="wrap_content" />

                <TextView
                    android:text="0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/ucastnikuDocela"
                    android:textAlignment="textEnd"
                    android:textSize="18sp"
                    android:textColor="@android:color/black"
                    android:textStyle="normal|bold" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/plusUcastniciDocela"
                    android:textAppearance="@style/TextAppearance.AppCompat.Button"
                    style="@style/Widget.AppCompat.Button"
                    android:elevation="0dp"
                    android:text="Pozvat jednoho"
                    android:textSize="10sp" />

                <TextView
                    android:text="Docela zájemců:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView12"
                    android:textAlignment="textEnd" />

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:text="0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/ucastnikuDocelaDostupno" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:text="Ožrat:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView11"
                    android:textColor="@android:color/black"
                    android:textStyle="normal|bold"
                    android:textAlignment="textEnd" />

                <Space
                    android:layout_width="10dp"
                    android:layout_height="wrap_content" />

                <TextView
                    android:text="0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/ucastnikuOzrat"
                    android:textAlignment="textEnd"
                    android:textSize="18sp"
                    android:textColor="@android:color/black"
                    android:textStyle="normal|bold" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/plusUcastniciOzrat"
                    android:textAppearance="@style/TextAppearance.AppCompat.Button"
                    style="@style/Widget.AppCompat.Button"
                    android:elevation="0dp"
                    android:textSize="10sp"
                    android:text="Pozvat jednoho" />

                <TextView
                    android:text="Ožrat zájemců:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView12"
                    android:textAlignment="textEnd" />

                <Space
                    android:layout_width="10dp"
                    android:layout_height="wrap_content" />

                <TextView
                    android:text="0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/ucastnikuOzratDostupno" />
            </TableRow>
        </TableLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="70dp">

            <TextView
                android:text="Kapacita objektu:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView9"
                android:layout_weight="1"
                android:textColor="@android:color/black"
                android:textAlignment="textEnd"
                android:textStyle="normal|bold" />

            <TextView
                android:text="0/12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/statusKapacita"
                android:layout_weight="1"
                android:textColor="@android:color/black"
                android:textStyle="normal|bold"
                android:textAlignment="center" />

            <Button
                android:text="Zvýšit +12 (800 Kč)"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/plusKapacita"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="34dp">

            <TextView
                android:text="Celkem bodů:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView7"
                android:layout_weight="1"
                android:textAlignment="textEnd"
                android:textStyle="normal|bold" />

            <TextView
                android:text="0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/statusBodu"
                android:layout_weight="1"
                android:textSize="16sp"
                android:textStyle="normal|bold" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
